<form class="paper scrollable br-1 p-2 gap-3">


  <div class="grid">
    <div class="col gap-2">
      <div>
        <h class="text-large">Weapons</h2>
        {{#if equippedItems.length }}
          {{#each equippedItems as |item|}}
            <div class="grid align-items-center">
              <label class="col col-4 text-regular">{{item.name}} ({{item.system.damage}})</label>
              <div class="col-2 align-items-center">
                <input type="checkbox" name="weapon[]" value="{{item._id}}" checked>
              </div>
              <div class="col-6 align-items-center">
                <div class="grid align-items-center">
                  <label class="col col-4 text-regular">{{localize "MB.Impaired"}}</label>
                  <div class="col-8 align-items-center">
                    <input type="checkbox" name="weapon_impaired[]" value="{{item._id}}">
                  </div>
                </div>
              </div>
            </div>
          {{/each}}

        {{/if}}

        {{#if unequippedItems.length }}
          {{#each unequippedItems as |item|}}
            <div class="grid align-items-center">
              <label class="col col-4 text-regular">{{item.name}} ({{item.system.damage}})</label>
              <div class="col-2 align-items-center">
                <input type="checkbox" name="weapon[]" value="{{item._id}}">
              </div>
              <div class="col-6 align-items-center">
                <div class="grid align-items-center">
                  <label class="col col-4 text-regular">{{localize "MB.Impaired"}}</label>
                  <div class="col-8 align-items-center">
                    <input type="checkbox" name="weapon_impaired[]" value="{{item._id}}">
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
      </div>
      <div>
        <h2 class="text-large">Options</h2>

        <div class="grid align-items-center">
          <label class="col col-4 text-regular">{{localize "MB.Smite"}}</label>
          <div class="col-8 align-items-center">
            <input type="checkbox" name="smite">
          </div>
        </div>

        <div class="grid align-items-center">
          <label class="col col-4 text-regular">{{localize "MB.Impaired"}}</label>
          <div class="col-8 align-items-center">
            <input type="checkbox" name="impaired">
          </div>
        </div>

        <div class="grid align-items-center">
          <label class="col col-4 text-regular">{{localize "MB.Additional Dice"}}</label>
          <div class="col-8 align-items-center">
            <input class="input-simple" placeholder="d4" type="number" name="additional_damage">
          </div>
        </div>

        <div class="grid align-items-center">
          <label class="col col-4 text-regular">{{localize "MB.Override"}}</label>
          <div class="col-8 align-items-center">
            <input class="input-simple" placeholder="2d6" type="number" name="override_damage">
          </div>
        </div>
      </div>
    </div>
    {{/if}}
  </div>

  <div class="grid gap-1">
    <button type="submit"
      class="col button align-items-center button-primary cancel-button">{{localize "MB.Cancel"}}</button>
    <button type="submit"
      class="col button align-items-center button-primary ok-button">{{localize "MB.Create"}}</button>
  </div>
</form>
